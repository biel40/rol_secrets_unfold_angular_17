/* Habilities Management Styles */
.habilities-management {
  max-width: 1400px;
  margin: 0 auto;
  padding: 20px;
}

.habilities-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30px;
  gap: 20px;
  flex-wrap: wrap;

  .habilities-title {
    font-size: 2rem;
    font-weight: 700;
    color: $secondary-color;
    margin: 0;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
  }

  .habilities-actions {
    display: flex;
    align-items: center;
    gap: 15px;
    flex-wrap: wrap;

    .filter-container {
      display: flex;
      flex-direction: column;
      gap: 5px;
    }

    .search-container {
      display: flex;
      flex-direction: column;
      gap: 5px;
    }

    .clear-filters-button {
      padding: 8px 15px;
      border: 1px solid rgba($danger-color, 0.6);
      border-radius: $border-radius;
      background: linear-gradient(135deg, rgba($danger-color, 0.8), rgba($danger-color, 0.6));
      color: white;
      font-size: 0.85rem;
      font-weight: 600;
      cursor: pointer;
      transition: all $transition-speed ease;
      display: flex;
      align-items: center;
      gap: 5px;
      height: 40px;
      box-sizing: border-box;

      &:hover:not(:disabled) {
        background: linear-gradient(135deg, $danger-color, lighten($danger-color, 5%));
        transform: translateY(-1px);
        box-shadow: 0 2px 8px rgba($danger-color, 0.3);
      }

      &:disabled {
        opacity: 0.5;
        cursor: not-allowed;
        transform: none;
        box-shadow: none;
      }

      .filter-count {
        background: rgba(255, 255, 255, 0.9);
        color: $danger-color;
        border-radius: 50%;
        width: 20px;
        height: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.75rem;
        font-weight: 700;
        margin-left: 5px;
      }
    }
  }
}

.filter-status {
  background: rgba($secondary-color, 0.1);
  border: 1px solid rgba($secondary-color, 0.3);
  border-radius: $border-radius;
  padding: 10px 15px;
  margin-bottom: 20px;
  color: $secondary-color;
  font-size: 0.9rem;
  text-align: center;

  p {
    margin: 0;
    
    strong {
      color: $accent-color;
      font-weight: 700;
    }
  }
}

.habilities-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
  gap: 20px;
  margin-top: 20px;
}

.hability-card {
  background: linear-gradient(135deg, rgba($primary-color, 0.9), rgba($background-color, 0.9));
  border-radius: $border-radius;
  padding: 20px;
  box-shadow: $card-shadow;
  border: 1px solid rgba($secondary-color, 0.3);
  transition: all $transition-speed ease;
  position: relative;
  overflow: hidden;
  
  // Fixed dimensions for consistent sizing
  height: 400px; // Fixed height
  display: flex;
  flex-direction: column;

  &::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, $secondary-color, $accent-color);
  }

  &:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.4);
    border-color: $secondary-color;
  }
}

.hability-card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15px;

  .hability-header-main {
    display: flex;
    align-items: center;
    gap: 10px;

    .power-icon {
      font-size: 1.5rem;
      display: flex;
      align-items: center;
      filter: drop-shadow(0 0 3px rgba(0, 0, 0, 0.3));
    }
  }

  .hability-card-title {
    font-size: 1.3rem;
    font-weight: 600;
    color: $accent-color;
    margin: 0;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
  }

  .hability-card-level {
    background: rgba($secondary-color, 0.8);
    color: $primary-color;
    padding: 4px 12px;
    border-radius: 15px;
    font-size: 0.9rem;
    font-weight: 600;
    text-shadow: none;
  }
}

.hability-card-content {
  flex: 1; // Take remaining space
  display: flex;
  flex-direction: column;
  overflow: hidden;
  margin-bottom: 15px;

  .hability-card-description {
    color: $text-color;
    margin-bottom: 15px;
    line-height: 1.6;
    font-style: italic;
    flex: 1;
    position: relative;
    min-height: 100px;
    max-height: 280px;
    overflow: hidden;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    cursor: pointer;
    padding: 8px 0;
    
    // Fade effect for long text
    &::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      height: 40px;
      background: linear-gradient(transparent, rgba($primary-color, 0.9));
      pointer-events: none;
      opacity: 1;
      transition: opacity 0.3s ease;
    }

    // Expanded state on hover
    &:hover {
      max-height: 400px;
      overflow-y: auto;
      background: rgba($primary-color, 0.3);
      padding: 12px;
      border-radius: 4px;
      z-index: 2;
      
      &::after {
        opacity: 0;
      }
    }
    
    // Custom scrollbar for expanded state
    &::-webkit-scrollbar {
      width: 4px;
    }
    
    &::-webkit-scrollbar-track {
      background: rgba($secondary-color, 0.1);
      border-radius: 2px;
    }
    
    &::-webkit-scrollbar-thumb {
      background: rgba($secondary-color, 0.5);
      border-radius: 2px;
      
      &:hover {
        background: rgba($secondary-color, 0.7);
      }
    }
  }
}

.hability-card-stats {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 8px;
  margin-top: 15px;
  flex-shrink: 0; // Don't allow shrinking
  min-height: 120px; // Consistent height for stats section

  .stat-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 6px 0;
    border-bottom: 1px solid rgba($secondary-color, 0.2);

    .stat-label {
      font-size: 0.9rem;
      color: $secondary-color;
      font-weight: 500;
    }

    .stat-value {
      font-weight: 600;
      color: $accent-color;

      &.power-value {
        display: flex;
        align-items: center;
        gap: 5px;
        font-weight: 700;
        text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
      }
    }
  }
}

.hability-card-actions {
  display: flex;
  gap: 10px;
  margin-top: auto; // Push to bottom
  padding-top: 15px; // Space from content above
  flex-shrink: 0; // Don't allow shrinking

  .hability-action-button {
    flex: 1;
    padding: 10px 15px;
    border: none;
    border-radius: $border-radius;
    font-weight: 600;
    cursor: pointer;
    transition: all $transition-speed ease;
    text-transform: uppercase;
    font-size: 0.85rem;

    &.primary {
      background: linear-gradient(135deg, $secondary-color, $accent-color);
      color: $primary-color;

      &:hover {
        background: linear-gradient(135deg, lighten($secondary-color, 10%), lighten($accent-color, 10%));
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba($secondary-color, 0.3);
      }
    }

    &.secondary {
      background: linear-gradient(135deg, rgba($text-color, 0.1), rgba($text-color, 0.2));
      color: $text-color;
      border: 1px solid rgba($text-color, 0.3);

      &:hover {
        background: linear-gradient(135deg, rgba($text-color, 0.2), rgba($text-color, 0.3));
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba($text-color, 0.2);
      }
    }

    &.danger {
      background: linear-gradient(135deg, $danger-color, darken($danger-color, 10%));
      color: white;

      &:hover {
        background: linear-gradient(135deg, lighten($danger-color, 10%), $danger-color);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba($danger-color, 0.3);
      }
    }
  }
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40px;
  color: $text-color;

  .loading-spinner {
    width: 40px;
    height: 40px;
    border: 4px solid rgba($secondary-color, 0.3);
    border-top: 4px solid $secondary-color;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin-bottom: 15px;
  }
}

// Enhanced loading for habilities section
.habilities-loading-overlay {
  grid-column: 1 / -1; // Span all grid columns
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 400px;
  padding: 60px 20px;
  background: rgba($background-color, 0.8);
  border-radius: $border-radius;
  border: 2px dashed rgba($secondary-color, 0.3);

  .loading-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;

    .loading-spinner {
      width: 60px;
      height: 60px;
      border: 6px solid rgba($secondary-color, 0.2);
      border-top: 6px solid $secondary-color;
      border-radius: 50%;
      animation: spinSlow 2s linear infinite;
      position: relative;

      &::after {
        content: '';
        position: absolute;
        top: 10px;
        left: 10px;
        right: 10px;
        bottom: 10px;
        border: 3px solid transparent;
        border-top: 3px solid $accent-color;
        border-radius: 50%;
        animation: spinFast 1s linear infinite reverse;
      }
    }

    .loading-text {
      margin: 0;
      font-size: 1.2rem;
      color: $secondary-color;
      font-weight: 600;
      text-align: center;
      letter-spacing: 0.5px;
      animation: pulse 2s ease-in-out infinite;
    }
  }
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes spinSlow {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes spinFast {
  0% { transform: rotate(360deg); }
  100% { transform: rotate(0deg); }
}

@keyframes pulse {
  0%, 100% { 
    opacity: 0.7;
    transform: scale(1);
  }
  50% { 
    opacity: 1;
    transform: scale(1.05);
  }
}

// Responsive design for habilities
@media (max-width: 768px) {
  .habilities-header {
    flex-direction: column;
    align-items: stretch;

    .habilities-actions {
      flex-direction: column;
      gap: 10px;

      .filter-container,
      .search-container {
        width: 100%;

        .power-filter,
        .profile-filter,
        .search-input {
          width: 100%;
        }
      }

      .clear-filters-button {
        width: 100%;
        justify-content: center;
      }
    }
  }

  .habilities-grid {
    grid-template-columns: 1fr;
  }

  .hability-card-stats {
    grid-template-columns: 1fr;
  }

  .hability-card-actions {
    flex-direction: column;
  }

  // Responsive loading overlay
  .habilities-loading-overlay {
    min-height: 300px;
    padding: 40px 20px;

    .loading-content {
      .loading-spinner {
        width: 50px;
        height: 50px;
        border-width: 4px;

        &::after {
          top: 8px;
          left: 8px;
          right: 8px;
          bottom: 8px;
          border-width: 2px;
        }
      }

      .loading-text {
        font-size: 1rem;
      }
    }
  }
}

// Hability association modal styles
.hability-form-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  backdrop-filter: blur(5px);
}

.association-modal {
  background: $background-color;
  border: 2px solid $secondary-color;
  border-radius: $border-radius;
  width: 90%;
  max-width: 500px;
  max-height: 80vh;
  overflow-y: auto;
  box-shadow: $card-shadow;
  animation: fadeIn 0.3s ease-out;

  .association-modal-header {
    background: linear-gradient(135deg, $primary-color, darken($primary-color, 10%));
    padding: 20px;
    border-radius: $border-radius $border-radius 0 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid $secondary-color;

    h3 {
      margin: 0;
      color: $accent-color;
      font-size: 1.3rem;
      font-weight: 600;
    }

    .close-button {
      background: none;
      border: 2px solid $danger-color;
      color: $danger-color;
      width: 35px;
      height: 35px;
      border-radius: 50%;
      cursor: pointer;
      font-size: 18px;
      font-weight: bold;
      display: flex;
      justify-content: center;
      align-items: center;
      transition: all $transition-speed;

      &:hover {
        background: $danger-color;
        color: white;
        transform: scale(1.1);
      }
    }
  }

  .association-modal-content {
    padding: 20px;

    .hability-info {
      margin-bottom: 20px;
      padding: 15px;
      background: rgba($secondary-color, 0.1);
      border-radius: $border-radius;
      border-left: 4px solid $secondary-color;

      h4 {
        margin: 0 0 10px 0;
        color: $accent-color;
        font-size: 1.2rem;
      }

      p {
        margin: 0;
        color: $text-color;
        opacity: 0.9;
      }
    }

    .profiles-selector {
      margin-bottom: 25px;

      label {
        display: block;
        margin-bottom: 15px;
        color: $accent-color;
        font-weight: 600;
        font-size: 1.1rem;
      }

      .profiles-checkboxes {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 10px;
        max-height: 200px;
        overflow-y: auto;
        padding: 10px;
        background: rgba($primary-color, 0.3);
        border-radius: $border-radius;
        border: 1px solid rgba($secondary-color, 0.3);

        .profile-checkbox {
          display: flex;
          align-items: center;
          gap: 8px;
          padding: 8px;
          border-radius: 4px;
          transition: background $transition-speed;

          &:hover {
            background: rgba($secondary-color, 0.1);
          }

          input[type="checkbox"] {
            width: 18px;
            height: 18px;
            accent-color: $secondary-color;
            cursor: pointer;
          }

          label {
            margin: 0;
            color: $text-color;
            cursor: pointer;
            font-size: 0.95rem;
            font-weight: normal;
          }
        }
      }
    }

    .association-actions {
      display: flex;
      gap: 15px;
      justify-content: flex-end;

      .form-button {
        padding: 12px 25px;
        border: none;
        border-radius: $border-radius;
        font-weight: 600;
        cursor: pointer;
        transition: all $transition-speed;
        font-size: 1rem;

        &.primary {
          background: linear-gradient(135deg, $secondary-color, lighten($secondary-color, 10%));
          color: $primary-color;

          &:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba($secondary-color, 0.4);
          }

          &:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
          }
        }

        &.secondary {
          background: transparent;
          color: $text-color;
          border: 2px solid rgba($text-color, 0.3);

          &:hover {
            background: rgba($text-color, 0.1);
            border-color: $text-color;
          }
        }
      }
    }
  }
}

// Associated profiles display styles
.associated-profiles {
  margin-top: 15px;
  padding-top: 15px;
  border-top: 1px solid rgba($secondary-color, 0.3);

  .associated-profiles-label {
    margin-bottom: 8px;

    .stat-label {
      color: $accent-color;
      font-weight: 600;
    }
  }

  .profile-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;

    .profile-tag {
      background: linear-gradient(135deg, $secondary-color, lighten($secondary-color, 10%));
      color: $primary-color;
      padding: 4px 8px;
      border-radius: 12px;
      font-size: 0.8rem;
      font-weight: 600;
      white-space: nowrap;
      transition: transform $transition-speed;

      &:hover {
        transform: scale(1.05);
      }
    }
  }
}

// Unified filter styles for habilities section
.habilities-management {
  .habilities-actions {
    .filter-container {
      .power-filter,
      .profile-filter {
        padding: 8px 12px;
        border: 1px solid rgba($secondary-color, 0.5);
        border-radius: $border-radius;
        background: rgba($primary-color, 0.8);
        color: $text-color;
        font-size: 0.9rem;
        cursor: pointer;
        transition: all $transition-speed ease;
        min-width: 150px;
        height: 40px;

        &:focus {
          outline: none;
          border-color: $secondary-color;
          box-shadow: 0 0 5px rgba($secondary-color, 0.3);
        }

        &:hover {
          border-color: $secondary-color;
        }

        option {
          background: $primary-color;
          color: $text-color;
        }
      }
    }

    .search-container {
      .search-input {
        padding: 8px 15px;
        border-radius: $border-radius;
        border: 1px solid rgba($secondary-color, 0.5);
        background: rgba($primary-color, 0.8);
        color: $text-color;
        font-size: 0.9rem;
        min-width: 150px;
        height: 40px;
        box-sizing: border-box;
        transition: all $transition-speed ease;
        
        &:focus {
          outline: none;
          border-color: $secondary-color;
          box-shadow: 0 0 5px rgba($secondary-color, 0.3);
        }
        
        &::placeholder {
          color: rgba($text-color, 0.5);
        }
      }
    }

    .clear-filters-button {
      padding: 8px 15px;
      border: 1px solid rgba($danger-color, 0.6);
      border-radius: $border-radius;
      background: linear-gradient(135deg, rgba($danger-color, 0.8), rgba($danger-color, 0.6));
      color: white;
      font-size: 0.85rem;
      font-weight: 600;
      cursor: pointer;
      transition: all $transition-speed ease;
      display: flex;
      align-items: center;
      gap: 5px;
      height: 40px;
      box-sizing: border-box;

      &:hover {
        background: linear-gradient(135deg, $danger-color, rgba($danger-color, 0.8));
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba($danger-color, 0.3);
      }

      &:disabled {
        opacity: 0.5;
        cursor: not-allowed;
        transform: none;
        box-shadow: none;
      }

      .filter-count {
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        width: 20px;
        height: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.75rem;
        font-weight: bold;
      }
    }
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: scale(0.9) translateY(-20px);
  }
  to {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}
