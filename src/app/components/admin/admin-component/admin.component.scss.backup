// Variables
$primary-color: #2c3e50;
$secondary-color: #d4af37;
$background-color: #1a2530;
$text-color: #e0e0e0;
$accent-color: #ffeba7;
$danger-color: #e74c3c;
$success-color: #2ecc71;
$border-radius: 8px;
$card-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
$transition-speed: 0.3s;

// Base styles
.dm-dashboard {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: linear-gradient(to bottom, $primary-color, $background-color);
  color: $text-color;
  font-family: Roboto, "Helvetica Neue", Inter, Avenir, Helvetica, Arial, sans-serif;
  padding: 0;
  overflow-x: hidden;
  position: relative;

  &::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 5px;
    background: linear-gradient(90deg, transparent, $secondary-color, transparent);
    z-index: 10;
  }
}

// Header styles
.dm-header {
  padding: 20px 30px;
  background: rgba(0, 0, 0, 0.2);
  border-bottom: 1px solid rgba($secondary-color, 0.3);
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.dm-title-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.dm-title {
  font-size: 2.2rem;
  font-weight: bold;
  color: $secondary-color;
  margin: 0;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
  text-align: center;
  position: relative;
  
  &::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 2px;
    background: $secondary-color;
  }
}

.dm-subtitle {
  font-size: 1rem;
  color: rgba($text-color, 0.7);
  margin-top: 15px;
  font-style: italic;
}

.dm-tabs {
  display: flex;
  justify-content: center;
  gap: 10px;
  margin-top: 10px;
  flex-wrap: wrap;
}

.dm-tab {
  padding: 10px 20px;
  background: rgba(0, 0, 0, 0.2);
  border: 1px solid rgba($secondary-color, 0.3);
  border-radius: $border-radius;
  color: $text-color;
  cursor: pointer;
  transition: all $transition-speed ease;
  font-size: 0.9rem;
  font-weight: 500;
  
  &:hover {
    background: rgba($secondary-color, 0.1);
    border-color: rgba($secondary-color, 0.5);
  }
  
  &.active {
    background: rgba($secondary-color, 0.2);
    border-color: $secondary-color;
    color: $secondary-color;
    box-shadow: 0 0 10px rgba($secondary-color, 0.2);
  }
}

// Main content area
.dm-content {
  flex: 1;
  padding: 30px;
  display: flex;
  flex-direction: column;
  gap: 30px;
}

// Battle panel
.battle-panel {
  background: rgba(0, 0, 0, 0.2);
  border-radius: $border-radius;
  border: 1px solid rgba($secondary-color, 0.3);
  padding: 20px;
  box-shadow: $card-shadow;
}

.battle-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
  flex-wrap: wrap;
  gap: 15px;
}

.battle-title {
  font-size: 1.5rem;
  color: $secondary-color;
  margin: 0;
  display: flex;
  align-items: center;
  gap: 10px;
  
  &::before {
    content: '‚öîÔ∏è';
    font-size: 1.2rem;
  }
}

.battle-actions {
  display: flex;
  gap: 10px;
  flex-wrap: wrap;
}

.battle-button {
  padding: 8px 16px;
  border-radius: $border-radius;
  border: none;
  background: linear-gradient(to right, $secondary-color, darken($secondary-color, 10%));
  color: $primary-color;
  font-weight: 600;
  cursor: pointer;
  transition: all $transition-speed ease;
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 0.9rem;
  
  &:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba($secondary-color, 0.3);
  }
  
  &:active {
    transform: translateY(0);
  }
  
  &:disabled {
    opacity: 0.5;
    cursor: not-allowed;
    transform: none;
    box-shadow: none;
  }
  
  &.secondary {
    background: rgba(255, 255, 255, 0.1);
    color: $text-color;
    border: 1px solid rgba($text-color, 0.2);
    
    &:hover {
      background: rgba(255, 255, 255, 0.15);
      border-color: rgba($text-color, 0.3);
    }
  }
}

.battle-icon {
  font-size: 1.1rem;
}

.battle-enemies {
  min-height: 150px;
}

.selected-enemies-list {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.selected-enemy-item {
  display: flex;
  align-items: center;
  gap: 15px;
  background: rgba(0, 0, 0, 0.2);
  border-radius: $border-radius;
  padding: 10px 15px;
  border: 1px solid rgba($secondary-color, 0.2);
  transition: all $transition-speed ease;
  
  &:hover {
    background: rgba(0, 0, 0, 0.3);
    border-color: rgba($secondary-color, 0.3);
    transform: translateX(5px);
  }
}

.enemy-avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  background-size: cover;
  background-position: center;
  position: relative;
  border: 2px solid $secondary-color;
  box-shadow: 0 0 10px rgba($secondary-color, 0.3);
  flex-shrink: 0;
}

.enemy-level {
  position: absolute;
  bottom: -5px;
  right: -5px;
  background: $primary-color;
  color: $secondary-color;
  border-radius: 50%;
  width: 22px;
  height: 22px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 0.7rem;
  font-weight: bold;
  border: 1px solid $secondary-color;
}

.enemy-details {
  flex: 1;
}

.enemy-name {
  font-weight: 600;
  font-size: 1.1rem;
  margin-bottom: 5px;
  color: $secondary-color;
}

.enemy-stats {
  font-size: 0.8rem;
  color: rgba($text-color, 0.7);
}

.remove-enemy {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  background: rgba($danger-color, 0.2);
  border: 1px solid rgba($danger-color, 0.3);
  color: $danger-color;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all $transition-speed ease;
  font-size: 1.2rem;
  padding: 0;
  
  &:hover {
    background: rgba($danger-color, 0.3);
    transform: scale(1.1);
  }
}

.empty-battle-list {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 30px;
  text-align: center;
  color: rgba($text-color, 0.7);
}

.empty-icon {
  font-size: 3rem;
  margin-bottom: 15px;
  opacity: 0.7;
}

.empty-hint {
  font-size: 0.9rem;
  font-style: italic;
  margin-top: 5px;
  opacity: 0.7;
}

// Enemies library
.enemies-library {
  background: rgba(0, 0, 0, 0.2);
  border-radius: $border-radius;
  border: 1px solid rgba($secondary-color, 0.3);
  padding: 20px;
  box-shadow: $card-shadow;
}

.library-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
  flex-wrap: wrap;
  gap: 15px;
}

.library-title {
  font-size: 1.5rem;
  color: $secondary-color;
  margin: 0;
  display: flex;
  align-items: center;
  gap: 10px;
  
  &::before {
    content: 'üêâ';
    font-size: 1.2rem;
  }
}

.library-actions {
  display: flex;
  gap: 10px;
  align-items: center;
  flex-wrap: wrap;

  // Filter styles for dropdowns
  .filter-container {
    .level-filter,
    .boss-filter {
      padding: 8px 12px;
      border: 1px solid rgba($secondary-color, 0.5);
      border-radius: $border-radius;
      background: rgba($primary-color, 0.8);
      color: $text-color;
      font-size: 0.9rem;
      cursor: pointer;
      transition: all $transition-speed ease;

      &:focus {
        outline: none;
        border-color: $secondary-color;
        box-shadow: 0 0 5px rgba($secondary-color, 0.3);
      }

      &:hover {
        border-color: $secondary-color;
      }

      option {
        background: $primary-color;
        color: $text-color;
      }
    }
  }

  // Clear filters button
  .clear-filters-button {
    padding: 8px 15px;
    border: 1px solid rgba($danger-color, 0.6);
    border-radius: $border-radius;
    background: linear-gradient(135deg, rgba($danger-color, 0.8), rgba($danger-color, 0.6));
    color: white;
    font-size: 0.85rem;
    font-weight: 600;
    cursor: pointer;
    transition: all $transition-speed ease;
    display: flex;
    align-items: center;
    gap: 5px;

    &:hover:not(:disabled) {
      background: linear-gradient(135deg, $danger-color, lighten($danger-color, 5%));
      transform: translateY(-1px);
      box-shadow: 0 2px 8px rgba($danger-color, 0.3);
    }

    &:disabled {
      opacity: 0.5;
      cursor: not-allowed;
      transform: none;
      box-shadow: none;
    }

    .filter-count {
      background: rgba(255, 255, 255, 0.9);
      color: $danger-color;
      border-radius: 50%;
      width: 20px;
      height: 20px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 0.75rem;
      font-weight: 700;
      margin-left: 5px;
    }
  }
}

// Filter status info
.filter-status {
  background: rgba($secondary-color, 0.1);
  border: 1px solid rgba($secondary-color, 0.3);
  border-radius: $border-radius;
  padding: 10px 15px;
  margin: 15px 0;
  text-align: center;

  p {
    margin: 0;
    color: $text-color;
    font-size: 0.9rem;

    strong {
      color: $secondary-color;
      font-weight: 600;
    }
  }
}

.library-button {
  padding: 8px 16px;
  border-radius: $border-radius;
  border: none;
  background: linear-gradient(to right, $success-color, darken($success-color, 10%));
  color: white;
  font-weight: 600;
  cursor: pointer;
  transition: all $transition-speed ease;
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 0.9rem;
  
  &:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba($success-color, 0.3);
  }
}

.add-icon {
  font-size: 1.2rem;
  font-weight: bold;
}

.search-container {
  position: relative;
}

.search-input {
  padding: 8px 15px;
  border-radius: $border-radius;
  border: 1px solid rgba($text-color, 0.2);
  background: rgba(0, 0, 0, 0.2);
  color: $text-color;
  font-size: 0.9rem;
  width: 200px;
  transition: all $transition-speed ease;
  
  &:focus {
    outline: none;
    border-color: rgba($secondary-color, 0.5);
    background: rgba(0, 0, 0, 0.3);
    width: 220px;
  }
  
  &::placeholder {
    color: rgba($text-color, 0.5);
  }
}

.enemies-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: 20px;
}

.enemy-card {
  background: rgba(0, 0, 0, 0.2);
  border-radius: $border-radius;
  overflow: hidden;
  border: 1px solid rgba($secondary-color, 0.2);
  transition: all $transition-speed ease;
  display: flex;
  flex-direction: column;
  height: 100%;
  
  &:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
    border-color: rgba($secondary-color, 0.4);
  }
}

.enemy-card-header {
  padding: 15px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid rgba($secondary-color, 0.2);
}

.enemy-card-title {
  margin: 0;
  font-size: 1.2rem;
  color: $secondary-color;
  font-weight: 600;
}

.enemy-card-level {
  background: rgba($secondary-color, 0.2);
  color: $secondary-color;
  padding: 3px 8px;
  border-radius: 4px;
  font-size: 0.8rem;
  font-weight: 500;
}

.enemy-card-image {
  height: 160px;
  background-size: cover;
  background-position: center;
  position: relative;
}

.enemy-card-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.7));
}

.enemy-card-content {
  padding: 15px;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.enemy-card-description {
  margin: 0 0 15px;
  font-size: 0.9rem;
  line-height: 1.5;
  color: rgba($text-color, 0.9);
  flex: 1;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.enemy-card-stats {
  display: flex;
  justify-content: space-between;
  margin-top: auto;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 5px;
}

.stat-icon {
  font-size: 1.2rem;
}

.stat-value {
  font-weight: 600;
  color: $secondary-color;
}

.enemy-card-actions {
  display: flex;
  gap: 8px;
  padding: 15px;
  border-top: 1px solid rgba($secondary-color, 0.2);
  background: rgba(0, 0, 0, 0.1);
}

.enemy-action-button {
  flex: 1;
  padding: 8px;
  border-radius: 4px;
  border: 1px solid rgba($text-color, 0.2);
  background: rgba(255, 255, 255, 0.05);
  color: $text-color;
  font-size: 0.8rem;
  cursor: pointer;
  transition: all $transition-speed ease;
  
  &:hover {
    background: rgba(255, 255, 255, 0.1);
  }
  
  &.primary {
    background: rgba($secondary-color, 0.2);
    border-color: rgba($secondary-color, 0.4);
    color: $secondary-color;
    
    &:hover {
      background: rgba($secondary-color, 0.3);
    }
  }
  
  &.danger {
    background: rgba($danger-color, 0.1);
    border-color: rgba($danger-color, 0.3);
    color: $danger-color;
    
    &:hover {
      background: rgba($danger-color, 0.2);
    }
  }
}

.empty-enemies-list {
  grid-column: 1 / -1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 50px 20px;
  text-align: center;
  color: rgba($text-color, 0.7);
}

.create-first-enemy {
  margin-top: 20px;
  padding: 10px 20px;
  border-radius: $border-radius;
  border: none;
  background: linear-gradient(to right, $success-color, darken($success-color, 10%));
  color: white;
  font-weight: 600;
  cursor: pointer;
  transition: all $transition-speed ease;
  
  &:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba($success-color, 0.3);
  }
}

// Footer
.dm-footer {
  padding: 20px 30px;
  background: rgba(0, 0, 0, 0.2);
  border-top: 1px solid rgba($secondary-color, 0.3);
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: 15px;
}

.sign-out-button {
  padding: 8px 16px;
  border-radius: $border-radius;
  border: 1px solid rgba($text-color, 0.2);
  background: rgba(0, 0, 0, 0.2);
  color: $text-color;
  font-size: 0.9rem;
  cursor: pointer;
  transition: all $transition-speed ease;
  display: flex;
  align-items: center;
  gap: 8px;
  
  &:hover {
    background: rgba(0, 0, 0, 0.3);
    border-color: rgba($text-color, 0.3);
  }
}

.sign-out-icon {
  font-size: 1.1rem;
}

// Mission styles
.missions-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 30px;
  gap: 30px;
}

.missions-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: 20px;
}

.missions-title {
  font-size: 2rem;
  font-weight: 700;
  color: $secondary-color;
  margin: 0;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
}

.missions-actions {
  display: flex;
  align-items: center;
  gap: 20px;
  flex-wrap: wrap;
}

.mission-button {
  padding: 12px 24px;
  border: none;
  border-radius: $border-radius;
  font-weight: 600;
  cursor: pointer;
  transition: all $transition-speed;
  display: flex;
  align-items: center;
  gap: 8px;

  &.primary {
    background: linear-gradient(135deg, $secondary-color, darken($secondary-color, 10%));
    color: $primary-color;

    &:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba($secondary-color, 0.4);
    }
  }
}

// Mission Form Modal
.mission-form-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 20px;
}

.mission-form-modal {
  background: $primary-color;
  border-radius: $border-radius;
  box-shadow: $card-shadow;
  max-width: 600px;
  width: 100%;
  max-height: 90vh;
  overflow-y: auto;
  border: 1px solid rgba($secondary-color, 0.3);
}

.mission-form-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px 30px;
  border-bottom: 1px solid rgba($secondary-color, 0.2);

  h3 {
    margin: 0;
    color: $secondary-color;
    font-size: 1.5rem;
    font-weight: 600;
  }
}

.close-button {
  background: none;
  border: none;
  color: $text-color;
  font-size: 24px;
  cursor: pointer;
  padding: 5px;
  line-height: 1;
  transition: color $transition-speed;

  &:hover {
    color: $danger-color;
  }
}

.mission-form {
  padding: 30px;
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: 8px;

  label {
    font-weight: 600;
    color: $secondary-color;
  }
}

.form-row {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20px;
}

.form-input, .form-textarea, .form-select {
  padding: 12px;
  border: 1px solid rgba($secondary-color, 0.3);
  border-radius: $border-radius;
  background: rgba($background-color, 0.5);
  color: $text-color;
  font-family: inherit;
  transition: border-color $transition-speed;

  &:focus {
    outline: none;
    border-color: $secondary-color;
  }
}

.form-textarea {
  min-height: 100px;
  resize: vertical;
}

.form-actions {
  display: flex;
  justify-content: flex-end;
  gap: 15px;
  margin-top: 20px;
}

.form-button {
  padding: 12px 24px;
  border: none;
  border-radius: $border-radius;
  font-weight: 600;
  cursor: pointer;
  transition: all $transition-speed;

  &.primary {
    background: linear-gradient(135deg, $secondary-color, darken($secondary-color, 10%));
    color: $primary-color;

    &:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba($secondary-color, 0.4);
    }
  }

  &.secondary {
    background: transparent;
    color: $text-color;
    border: 1px solid rgba($text-color, 0.3);

    &:hover {
      background: rgba($text-color, 0.1);
    }
  }
}

// Missions Grid
.missions-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
  gap: 25px;
}

.mission-card {
  background: rgba($primary-color, 0.9);
  border-radius: $border-radius;
  border: 1px solid rgba($secondary-color, 0.2);
  box-shadow: $card-shadow;
  overflow: hidden;
  transition: transform $transition-speed, box-shadow $transition-speed;

  &:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba($secondary-color, 0.2);
  }
}

.mission-card-header {
  padding: 20px;
  border-bottom: 1px solid rgba($secondary-color, 0.2);
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 15px;
}

.mission-card-title {
  margin: 0;
  color: $secondary-color;
  font-size: 1.3rem;
  font-weight: 600;
  flex: 1;
}

.mission-badges {
  display: flex;
  gap: 8px;
  flex-wrap: wrap;
}

.mission-badge {
  padding: 4px 8px;
  border-radius: 4px;
  font-size: 0.75rem;
  font-weight: 600;
  color: white;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.mission-card-content {
  padding: 20px;
}

.mission-description {
  color: $text-color;
  line-height: 1.6;
  margin: 0 0 15px 0;
}

.mission-rewards {
  display: flex;
  gap: 15px;
  flex-wrap: wrap;
}

.reward-item {
  display: flex;
  align-items: center;
  gap: 5px;
  padding: 6px 12px;
  background: rgba($secondary-color, 0.1);
  border-radius: 20px;
  border: 1px solid rgba($secondary-color, 0.3);
}

.reward-icon {
  font-size: 1rem;
}

.reward-value {
  font-weight: 600;
  color: $secondary-color;
  font-size: 0.9rem;
}

.mission-card-actions {
  padding: 15px 20px;
  border-top: 1px solid rgba($secondary-color, 0.2);
  display: flex;
  gap: 10px;
}

.mission-action-button {
  flex: 1;
  padding: 10px;
  border: none;
  border-radius: $border-radius;
  font-weight: 600;
  cursor: pointer;
  transition: all $transition-speed;

  &.primary {
    background: linear-gradient(135deg, $secondary-color, darken($secondary-color, 10%));
    color: $primary-color;

    &:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 15px rgba($secondary-color, 0.4);
    }
  }

  &.danger {
    background: linear-gradient(135deg, $danger-color, darken($danger-color, 10%));
    color: white;

    &:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 15px rgba($danger-color, 0.4);
    }
  }

  &.assign {
    background: linear-gradient(135deg, #2196F3, darken(#2196F3, 10%));
    color: white;

    &:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 15px rgba(#2196F3, 0.4);
    }
  }

  &.secondary {
    background: transparent;
    color: $text-color;
    border: 1px solid rgba($text-color, 0.3);

